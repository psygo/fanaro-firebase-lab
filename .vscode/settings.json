{
    "files.exclude": {
        //   0. General Stuff
        ".gitignore": false,
        "README.md": false,
        //
        //   1. JS | TS | Packages
        "**/dist/": true,
        "**/index.js": true,
        "**/node_modules/": true,
        "**/package-lock.json": true,
        "**/tsconfig.tsbuildinfo": true,
        //
        //   2. Firebase
        //
        // 2.1. Config
        "firebase/": true,
        "firebase.json": true,
        ".firebaserc": true,
        "firestore.indexes.json": true,
        "firestore.rules": true,
        "remoteconfig.template.json": true,
        "functions/tsconfig.tsbuildinfo": true,
        //
        // 2.2. Debug
        "firebase-debug.log": true,
        "firestore-debug.log": true,
        "pubsub-debug.log": true,
        "ui-debug.log": true,
        //
        //   3. Others
        "index.js.LICENSE.txt": true,
    }
}