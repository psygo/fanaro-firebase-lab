{
  "functions": {
    "source": "../functions",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ],
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  },
  "firestore": {
    "rules": "firebase/firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase/firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "frontend/public/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9094
    },
    "functions": {
      "port": 4096
    },
    "firestore": {
      "port": 8075
    },
    "hosting": {
      "port": 4095
    },
    "ui": {
      "enabled": true,
      "port": 7000
    }
  },
  "remoteconfig": {
    "template": "firebase/remoteconfig.template.json"
  }
}